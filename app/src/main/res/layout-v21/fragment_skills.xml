<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff3f51b5">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:background="@color/colorPrimaryDark"
            android:divider="#007c8082"
            android:dividerPadding="15dp"
            android:showDividers="middle|beginning">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/waitingHeader"
                card_view:cardCornerRadius="4dp"
                android:layout_gravity="center_horizontal|top"

                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="0.78">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:buttonBarStyle"
                android:layout_weight="0.78"
                android:dividerPadding="15dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Languages"
                    android:id="@+id/textView"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="C# \t\t\t\t\t\t\t\t\t\t.Net \t\t\t\t\t\t\tC++ \nJava \t\t\t\t\t\t\t\t\tSQL \t\t\t\t\t\t\tSwift"
                android:id="@+id/textView2"
                android:textSize="16sp"
                android:background="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/waitingHeader"
                card_view:cardCornerRadius="4dp"
                android:layout_gravity="center_horizontal|top"

                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="0.78">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.78"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Web Technologies"
                    android:id="@+id/textView3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="ASP.Net \t\t\t\t\t\tDreamweaver \t\t\t\tHTML \nXML \t\t\t\t\t\t\t\t\tJavaScript \t\t\t\t\t\t\tWordPress"
                    android:id="@+id/textView4"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/waitingHeader"
                card_view:cardCornerRadius="4dp"
                android:layout_gravity="center_horizontal|top"

                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="0.78">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.78"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Database"
                    android:id="@+id/textView5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Oracle \t\t\t\t\t\t\t\tMySQL \t\t\t\t\tMSAccess "
                    android:id="@+id/textView6"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/waitingHeader"
                card_view:cardCornerRadius="4dp"
                android:layout_gravity="center_horizontal|top"

                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="0.78">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.78"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Operating Systems"
                    android:id="@+id/textView7"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Windows \t\t\t\t\t\t\t\t\tLinux (Ubuntu) \nMacintosh \t\t\t\t\t\t\t\tIOS \t\t\t\t\t\t\t\t\t\tAndroid"
                    android:id="@+id/textView8"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>
</android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>